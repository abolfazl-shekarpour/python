n = int(input("Enter the value of n: "))

# Calculate the diameter of the rhombus
diameter = 1 + 2 * n

# Upper half of the rhombus
for i in range(1, n + 1):
    print(" " * (n - i), end="")
    print("*" * (2 * i - 1))

# Lower half of the rhombus
for i in range(n, 0, -1):
    print(" " * (n - i), end="")
    print("*" * (2 * i - 1))
